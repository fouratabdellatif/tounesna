{% block content %}

	<div class="page-top" id="templatemo_contact"></div>
	<!-- /.page-header -->

	<div class="middle-content">
		<div style="margin-bottom: 60px;" class="container">
			<div class="row">
				<div class="our-listing owl-carousel">
					<div class=" blog-section spad mx-auto">

						<section class="cart-section spad">
							<div class="container">

								<div class="nk-store nk-store-cart">
									<div
										class="table-responsive">

										<!-- START: Produits in Panier -->
										<table class="table nk-store-cart-products">
											<tbody>
												{% for p in dataPanier %}
													{% if p.qty > 0 %}
														<tr>

															<td class="nk-product-cart-title">
																<h5 class="h6">Produit:</h5>
																<div class="nk-gap-1"></div>

																<img src="{{ asset('uploads/' ~ p.produit.image) }}" alt="" width="100" height="100"/>

															</td>
															<td class="nk-product-cart-price">
																<h5 class="h6">Price:</h5>
																<div class="nk-gap-1"></div>

																<strong>{{ p.produit.price }}
																	TND</strong>
															</td>
															<td class="nk-product-cart-quantity">
																<h5 class="h6">Quantity:</h5>
																<div class="nk-gap-1">
																	{{p.qty }}
																</div>


															</td>
															<td class="nk-product-cart-total">
																<h5 class="h6">Total:</h5>
																<div class="nk-gap-1"></div>

																<strong>{{ p.qty * p.produit.price }}
																	TND</strong>
															</td>
															<td>

																<a href="{{ path('add_panier', { 'id' :p.produit.idp }) }}" class="btn btn-success float-right">
																	<i class="fas fa-plus"></i>
																</a>

															</td>

															<td>
																<a href="{{ path('remove_panier', {'id': p.produit.idp}) }}" class="btn btn-danger">
																	<i class="fas fa-trash"></i>
																</a>
															</td>
															<td></td>
														</tr>
													{% endif %}
												{% endfor %}


											</tbody>
										</table>
										<!-- END: Produits in Panier -->

									</div>
									<div
										class="col-md-6">
										<!-- START: Panier Totals -->
										{% if dataPanier %}
											<h3 class="nk-title h4">Panier Total</h3>
											<table class="nk-table nk-table-sm">
												<tbody>
													<tr class="nk-store-cart-totals-subtotal">
														<td>
															Subtotal
														</td>
														<td>
															{{ total }}
															TND
														</td>
													</tr>
													{# <tr class="nk-store-cart-totals-shipping">
																																			                            <td>
																																			                                Shipping
																																			                            </td>
																																			                            <td>
																																			                                Free Shipping
																																			                            </td>
																																			                        </tr> #}
													<tr class="nk-store-cart-totals-total">
														<td>
															Total
														</td>
														<td>
															{{ total }}
															TND
														</td>
													</tr>
												</tbody>
											</table>
										{% else %}
											<h3 class="nk-title h4">Your shopping panier is empty</h3>
										{% endif %}
										<!-- END: Panier Totals -->
									</div>
								</div>
								{#             
																				            <a href="{{ path('add_commande') }}" class="btn btn-info float-right">
																				                <i class="fas fa-check"></i>
																				            </a> #}
							</div>
							{% if dataPanier %}
								<a class="btn btn-info float-right" style="margin-right: 120px;" href="{{ path('add_commande') }}">Proceed to Checkout</a>
							{% else %}
								<a class="btn btn-info float-right" style="margin-right: 120px;" href="{{ path('shop') }}">Return to Shop</a>
							{% endif %}

						</section>

						<div class="nk-gap-2"></div>
						<div class="clearfix"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
