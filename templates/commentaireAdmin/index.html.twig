{% extends "base-back.html.twig" %}

{% block title %}
	Commentaires
{% endblock %}

{% block pagewrapper %}
    <h1>Commentaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Contenue</th>
                <th>Dateajc</th>
                <th>Auteur</th>
                <th>Hotel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.contenue }}</td>
                <td>{{ commentaire.dateajc ? commentaire.dateajc|date('d-m-Y') : '' }}</td>
                <td>{{ commentaire.auteur }}</td>
                <td>{{ commentaire.idHotel }}</td>
                <td>
                    <a href="{{ path('admin_commentaire_show', {'idcom': commentaire.idcom}) }}">show</a>
                    {# <a href="{{ path('admin_commentaire_edit', {'idcom': commentaire.idcom}) }}">edit</a> #}

    {# {{ include('commentaireAdmin/_delete_form.html.twig') }} #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_commentaire_new') }}">Create new</a>
{% endblock %}
