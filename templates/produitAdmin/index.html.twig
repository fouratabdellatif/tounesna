{% extends "base-back.html.twig" %}

{% block title %}
	Produits
{% endblock %}

{% block pagewrapper %}
	<h1>Produits</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Nomp</th>
				<th>Type</th>
				<th>Image</th>
				<th>Price</th>
				<th>Gouvernorat</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for produit in produits %}
				<tr>
					<td>{{ produit.nomp }}</td>
					<td>{{ produit.type }}</td>
					<td>
						<img style="height: 100px; object-fit: cover;" class="img-fluid" src="{{ asset('/uploads/' ~ produit.image) }}" alt="">
					</td>
					<td>{{ produit.price }}</td>
					<td>{{ produit.gouvernorat.nomGouver }}</td>
					<td>
						<a href="{{ path('admin_produit_show', {'idp': produit.idp}) }}">show</a>
						<a href="{{ path('admin_produit_edit', {'idp': produit.idp}) }}">edit</a>
						{{ include('produitAdmin/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('admin_produit_new') }}">Create new</a>
{% endblock %}
