{% extends "base-back.html.twig" %}

{% block title %}
	Produit
{% endblock %}

{% block pagewrapper %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nomp</th>
                <td>{{ produit.nomp }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ produit.type }}</td>
            </tr>
            <tr>
                <th>Image</th>
					<td>
						<img style="height: 100px; object-fit: cover;" class="img-fluid" src="{{ asset('/uploads/' ~ produit.image) }}" alt="">
					</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ produit.price }}</td>
            </tr>
            <tr>
                <th>Gouvernorat</th>
                <td>{{ produit.gouvernorat.nomGouver }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_produit_index') }}">back to list</a>

    <a href="{{ path('admin_produit_edit', {'idp': produit.idp}) }}">edit</a>

    {{ include('produitAdmin/_delete_form.html.twig') }}
{% endblock %}
